# Redirect all routes to index.html for SPA routing
/login /login.html 200
/index /index.html 200
/logout /index.html 200
/retrieve_data /index.html 200
/* /index.html 200

# API route handling
/api/login /login 200
/api/logout /logout 200
/api/submit_crm /submit_crm 200

# Headers for CORS and API routes
/api/login
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: POST, GET, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization

/api/logout
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: POST, GET, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization

# Netlify headers configuration
[[headers]]
  for = "/api/login"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Access-Control-Allow-Methods = "POST, GET, OPTIONS"
    Access-Control-Allow-Headers = "Content-Type, Authorization"

[[headers]]
  for = "/api/logout"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Access-Control-Allow-Methods = "POST, GET, OPTIONS"
    Access-Control-Allow-Headers = "Content-Type, Authorization"
